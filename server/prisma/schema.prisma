generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  role      String   @default("user") // admin, supervisor, user
  createdAt DateTime @default(now())
  
  products  Product[]
  auditLogs AuditLog[]
}

model Product {
  id          Int      @id @default(autoincrement())
  barcode     String?
  name        String
  category    String
  expiry      DateTime
  department  String?
  image       String?
  quantity    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  addedByUserId Int?
  addedBy       User? @relation(fields: [addedByUserId], references: [id], onDelete: SetNull)
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // CREATE, UPDATE, DELETE, LOGIN
  target    String
  details   String?
  createdAt DateTime @default(now())
  
  userId    Int?
  user      User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
}

// جدول ذاكرة المنتجات (يحتفظ بالبيانات الأساسية حتى بعد الحذف من المخزون)
model SavedProduct {
  barcode     String   @id // الباركود هو المعرف الأساسي
  name        String
  category    String
  image       String?
  updatedAt   DateTime @updatedAt
}
